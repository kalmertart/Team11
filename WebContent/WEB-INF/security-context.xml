<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security-3.1.xsd">

	<security:global-method-security secured-annotations="enabled" />

	<security:http auto-config="true" use-expressions="true">
		<security:form-login login-page="/login" authentication-failure-url="/login?error=true" />
		<security:intercept-url pattern="/**/view" access="hasAnyRole('ROLE_USER, ROLE_MODERATOR, ROLE_ADMIN')" />
		<security:intercept-url pattern="/**/add" access="hasAnyRole('ROLE_MODERATOR, ROLE_ADMIN')" />
		<security:intercept-url pattern="/**/update" access="hasAnyRole('ROLE_MODERATOR, ROLE_ADMIN')" />
		<security:intercept-url pattern="/**/delete" access="hasRole('ROLE_ADMIN')" />
		<security:access-denied-handler error-page="/accessDenied"/>
		<security:logout />
	</security:http>

	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service>
				<security:user name="admin" password="admin" authorities="ROLE_ADMIN"  />
				<security:user name="ylem" password="ylem" authorities="ROLE_MODERATOR"  />
				<security:user name="valvur" password="valvur" authorities="ROLE_USER"  />
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>

</beans>